<div class="position-relative">
  <h1>Articles</h1>
  <% if current_user %>
    <%= link_to 'New Article', new_article_path, class: 'btn btn-primary position-absolute bottom-0 end-0' %>
  <% end %>
</div>

<div class="row">
  <% @articles.each do |article| %>
    <div class="col-md-4">
      <div class="card">
        <%= image_tag 'https://via.placeholder.com/500x300',
                      class: 'card-img-top',
                      alt: ''%>
        <div class="card-body">
          <h5 class="card-title"><%= article.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted">Published: <%= article.created_at.strftime('%m/%d/%Y') %></h6>
          <p class="card-text"><%= article.content %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><%= article.category.name %></li>
        </ul>
        <div class="card-footer">
          <%= link_to 'Show', article, class: 'btn btn-primary w-100' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
