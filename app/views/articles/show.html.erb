<div class="row">
  <div class="col-lg-4 mb-3">
    <%= image_tag 'https://via.placeholder.com/800x600',
                  class: 'card-img-top',
                  alt: ''%>
  </div>
  <div class="col-lg-6 mb-3">
    <h1><%= @article.title %></h1>
    <p>Category: <%= @article.category.name %></p>
    <p>Published: <%= @article.created_at.strftime('%d/%m/%Y') %></p>
    <p>Author: <%= @article.user.full_name %></p>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <%= raw @article.content %>
  </div>
</div>
<div class="row">
  <% @comments.each do | comment | %>
    <div class="col-12">
      <h3><%= comment.user.full_name %></h3>
      <p><%= comment.comment %></p>
    </div>
  <% end %>
</div>
<hr>
<div class="row">
  <div class="col-12">
    <%= render 'comment', comment: @comment,
                          user_id: current_user.id,
                          article_id: @article.id %>
  </div>
</div>

<div class="pt-3">
  <%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-warning' %>
  <%= link_to 'List', articles_path, class: 'btn btn-secondary' %>
</div>
